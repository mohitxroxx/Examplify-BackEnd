{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "pretty": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "./public",
    "baseUrl": "./lib",
    "lib": ["ES6", "dom", "esnext"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}